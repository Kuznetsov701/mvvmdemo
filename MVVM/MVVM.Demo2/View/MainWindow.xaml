<Window x:Class="MVVM.Demo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM.Demo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350">

    <Window.Resources>
        <DataTemplate DataType="{x:Type local:MainWindowViewModel}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox Width="50" Text="{Binding LeftNum, UpdateSourceTrigger=PropertyChanged}" Margin="3"/>
                <TextBlock Text="+" Margin="3"/>
                <TextBox Width="50" Text="{Binding RightNum, UpdateSourceTrigger=PropertyChanged}" Margin="3"/>
                <TextBlock Text="=" Margin="3"/>
                <TextBlock Width="50" Text="{Binding Result}" Margin="3"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <local:MainWindowViewModel/>

</Window>
